<div class="jumbotron p-3 jumbotron-fluid">
  <h1 class="display-5"><%= @schedule.title %></h1>
  <hr class="my-4">
  <ul class="list-group">
  <% @occupations.each do |occupation| %>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <p>
        <%= occupation.title %>
        <span class="badge badge-success">
          <%= occupation.start_time&.to_s(:time) %> —
          <%= occupation.end_time&.to_s(:time) %>
        </span>

        <span class="badge badge-info">
          <%= occupation.start_date&.to_s(:date) %> —
          <%= occupation.end_date&.to_s(:date) %>
        </span>
      </p>

      <%= link_to occupation, method: :delete do %>
        <span>
        <svg class="bi bi-x-circle-fill" width="1em" height="1em" viewBox="0 0 16 16" fill="#eb2f2f" xmlns="http://www.w3.org/2000/svg">
          <path fill-rule="evenodd" d="M16 8A8 8 0 110 8a8 8 0 0116 0zm-4.146-3.146a.5.5 0 00-.708-.708L8 7.293 4.854 4.146a.5.5 0 10-.708.708L7.293 8l-3.147 3.146a.5.5 0 00.708.708L8 8.707l3.146 3.147a.5.5 0 00.708-.708L8.707 8l3.147-3.146z" clip-rule="evenodd"/>
        </svg>
        </span>
      <% end %>
    </li>
  <% end %>
  </ul>
</div>
