<%= form_for @occupation do |f| %>
  <div class='form-group'>
    <%= f.label 'Title', for: :title  %>
    <%= f.text_field :title, class: 'form-control',
                             placeholder: 'Math' %>
  </div>

  <div class="form-row">
    <div class='form-group col-md-6'>
      <%= f.label 'Start day', for: :start_date  %>
      <%= f.date_field :start_date, type: :date, class: 'form-control' %>
      <small id="start_date" class="form-text text-muted">
        Day and week day
      </small>
    </div>

    <div class='form-group col-md-6'>
      <%= f.label 'End day', for: :end_date  %>
      <%= f.date_field :end_date, type: :date, class: 'form-control' %>
      <small id='end_date' class="form-text text-muted">
        Day and week day
      </small>
    </div>
  </div>

  <div class="form-row">
    <div class='form-group col-md-6'>
      <%= f.label 'Start time', for: :start_time  %>
      <%= f.time_field :start_time, type: :time, class: 'form-control' %>
    </div>

    <div class='form-group col-md-6'>
      <%= f.label 'End time', for: :end_time  %>
      <%= f.time_field :end_time, type: :time, class: 'form-control' %>
    </div>
  </div>

  <%= f.hidden_field :schedule_id, value: @occupation.schedule_id %>
  <%= f.hidden_field :secret_token, value: params[:secret_token] %>

  <%= f.submit nil, type: 'submit', class: 'btn btn-primary' %>
<% end %>